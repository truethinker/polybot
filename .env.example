# --- Polymarket / CLOB ---
CLOB_HOST=https://clob.polymarket.com
GAMMA_HOST=https://gamma-api.polymarket.com

# Wallet (NO uses tu main wallet; usa una hot wallet con poco saldo)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# CLOB API credentials (los sacas de Polymarket cuando creas API key)


# Chain (Polygon)
CHAIN_ID=137

# --- Strategy / Scheduler ---
SERIES_SLUG=btc-up-or-down-5m

# Ventana horaria (Europe/Madrid). Formato ISO local:
WINDOW_START=2026-02-18T10:00:00
WINDOW_END=2026-02-18T12:00:00

# Ordenes (precio 0-1, size en shares)
PRICE_UP=0.51
SIZE_UP=20
PRICE_DOWN=0.49
SIZE_DOWN=20

# Seguridad
DRY_RUN=true
MAX_MARKETS=200
